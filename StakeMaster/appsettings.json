{
	"Serilog":
	{
		"Using":
		[
			"Serilog.Sinks.Console"
		],
		"MinimumLevel": "Verbose",
		"Enrich":
		[
			"WithAssemblyName",
			"WithThreadId"
		],
		"WriteTo:Async":
		{
			"Name": "Async",
			"Args":
			{
				"configure":
				[
					{
						"Name": "Console",
						"Args":
						{
							"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss}: [{Level:u3} {ThreadId}] {AssemblyName} - {Message}{NewLine}{Exception}",
							"theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Literate, Serilog.Sinks.Console"
						}
					}
				],
				"blockWhenFull": true
			}
		}
	}
}
